<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".GameMatt">


    <com.example.android.stakdice.StakCardView
        android:id="@+id/stak_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/colorBackgroundsecondAccent"
        android:contentDescription="@string/play_matt"
        app:layout_constraintBottom_toTopOf="@+id/button_switch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_stak_card" />

    <TextView
        android:id="@+id/textView_strength_row_1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="40dp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/strength_border"
        android:gravity="center"
        android:text="@string/placeholder_zero"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView_strength_row_3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="20dp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/strength_border"
        android:gravity="center"
        android:text="@string/placeholder_zero"
        app:layout_constraintBottom_toTopOf="@+id/textView_strength_row_2"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_switch"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/strength_border"
        android:gravity="center"
        android:text="@string/placeholder_switch"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/textView_strength_row_3"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView_strength_row_2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="20dp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/strength_border"
        android:gravity="center"
        android:text="@string/placeholder_zero"
        app:layout_constraintBottom_toTopOf="@+id/textView_strength_row_1"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView_agility_row_2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="20dp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/agility_border"
        android:gravity="center"
        android:text="@string/placeholder_zero"
        app:layout_constraintBottom_toTopOf="@+id/textView_agility_row_1"
        app:layout_constraintEnd_toStartOf="@+id/textView_knowledge_row_2"
        app:layout_constraintStart_toStartOf="@+id/guideline" />

    <TextView
        android:id="@+id/textView_knowledge_row_2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="20dp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/knowledge_border"
        android:gravity="center"
        android:text="@string/placeholder_zero"
        app:layout_constraintBottom_toTopOf="@+id/textView_knowledge_row_1"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView_knowledge_row_1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="40dp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/knowledge_border"
        android:gravity="center"
        android:text="@string/placeholder_zero"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView_agility_row_1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="40dp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/agility_border"
        android:gravity="center"
        android:text="@string/placeholder_zero"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textView_knowledge_row_1"
        app:layout_constraintStart_toStartOf="@+id/guideline" />

    <TextView
        android:id="@+id/textView_toughness_row_1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="40dp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/toughness_border"
        android:gravity="center"
        android:text="@string/placeholder_zero"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toEndOf="@+id/textView_strength_row_1" />

    <TextView
        android:id="@+id/textView_toughness_row_2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="20dp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/toughness_border"
        android:gravity="center"
        android:text="@string/placeholder_zero"
        app:layout_constraintBottom_toTopOf="@+id/textView_toughness_row_1"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toEndOf="@+id/textView_strength_row_2" />

    <TextView
        android:id="@+id/button_updown"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/toughness_border"
        android:gravity="center"
        android:text="@string/placeholder_updown"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/textView_toughness_row_3"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toEndOf="@+id/button_switch" />

    <TextView
        android:id="@+id/textView_toughness_row_3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="20dp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/toughness_border"
        android:gravity="center"
        android:text="@string/placeholder_zero"
        app:layout_constraintBottom_toTopOf="@+id/textView_toughness_row_2"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toEndOf="@+id/textView_strength_row_3" />

    <TextView
        android:id="@+id/textView_agility_row_3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="20dp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/agility_border"
        android:gravity="center"
        android:text="@string/placeholder_zero"
        app:layout_constraintBottom_toTopOf="@+id/textView_agility_row_2"
        app:layout_constraintEnd_toStartOf="@+id/textView_knowledge_row_3"
        app:layout_constraintStart_toStartOf="@+id/guideline" />

    <TextView
        android:id="@+id/textView_knowledge_row_3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="20dp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/knowledge_border"
        android:gravity="center"
        android:text="@string/placeholder_zero"
        app:layout_constraintBottom_toTopOf="@+id/textView_knowledge_row_2"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button_flip"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/agility_border"
        android:gravity="center"
        android:text="@string/placeholder_flip"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textView_agility_row_3"
        app:layout_constraintEnd_toStartOf="@+id/button_reroll"
        app:layout_constraintStart_toStartOf="@+id/guideline" />

    <Button
        android:id="@+id/button_reroll"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/knowledge_border"
        android:gravity="center"
        android:text="@string/placeholder_reroll"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textView_knowledge_row_3"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <Button
        android:id="@+id/button_roll"
        android:layout_width="49dp"
        android:layout_height="176dp"
        android:layout_marginEnd="8dp"
        android:text="R\no\nl\nl"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <ImageView
        android:id="@+id/image_view_dice"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/dice1"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />


</androidx.constraintlayout.widget.ConstraintLayout>