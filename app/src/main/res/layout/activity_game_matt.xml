<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameMatt">


    <ImageView
        android:id="@+id/image_Card"
        android:layout_width="125dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_launcher_background"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.042" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="592dp"
        android:autoSizeTextType="uniform"
        android:text="CARDNAME"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text_view_strength"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:background="@drawable/strength_border"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/text_view_toughness"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.064" />

    <TextView
        android:id="@+id/text_view_toughness"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:text="1"
        android:background="@drawable/toughness_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/text_view_agility"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.064" />

    <TextView
        android:id="@+id/text_view_agility"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:text="2"
        android:background="@drawable/agility_drawable"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/text_view_knowledge"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.064" />

    <TextView
        android:id="@+id/text_view_knowledge"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginEnd="16dp"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:text="3"
        android:background="@drawable/knowledge_drawable"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.064" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginBottom="392dp"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/strength_border"
        android:gravity="center"
        android:text="0"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="592dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/strength_border"
        android:gravity="center"
        android:text="0"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="503dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/toughness_border"
        android:gravity="center"
        android:text="0"
        tools:layout_editor_absoluteX="114dp"
        tools:layout_editor_absoluteY="503dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/agility_drawable"
        android:gravity="center"
        android:text="0"
        tools:layout_editor_absoluteX="217dp"
        tools:layout_editor_absoluteY="503dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/knowledge_drawable"
        android:gravity="center"
        android:text="0"
        tools:layout_editor_absoluteX="315dp"
        tools:layout_editor_absoluteY="503dp" />

    <TextView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/knowledge_drawable"
        android:gravity="center"
        android:text="0"
        tools:layout_editor_absoluteX="315dp"
        tools:layout_editor_absoluteY="592dp" />

    <TextView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/agility_drawable"
        android:gravity="center"
        android:text="0"
        tools:layout_editor_absoluteX="217dp"
        tools:layout_editor_absoluteY="592dp" />

    <TextView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/toughness_border"
        android:gravity="center"
        android:text="0"
        tools:layout_editor_absoluteX="114dp"
        tools:layout_editor_absoluteY="592dp" />

    <TextView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/strength_border"
        android:gravity="center"
        android:text="0"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="410dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/toughness_border"
        android:gravity="center"
        android:text="0"
        tools:layout_editor_absoluteX="114dp"
        tools:layout_editor_absoluteY="410dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/agility_drawable"
        android:gravity="center"
        android:text="0"
        tools:layout_editor_absoluteX="217dp"
        tools:layout_editor_absoluteY="410dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/knowledge_drawable"
        android:gravity="center"
        android:text="0"
        tools:layout_editor_absoluteX="315dp"
        tools:layout_editor_absoluteY="410dp" />

    <Button
        android:id="@+id/text_view_switch"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:background="@drawable/strength_border"
        android:text="Switch"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="349dp" />

    <TextView
        android:id="@+id/text_view_updown"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:text="UP/Down"
        android:background="@drawable/toughness_border"
        tools:layout_editor_absoluteX="114dp"
        tools:layout_editor_absoluteY="349dp" />

    <Button
        android:id="@+id/text_view_flip"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:background="@drawable/agility_drawable"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:text="Flip"
        tools:layout_editor_absoluteX="217dp"
        tools:layout_editor_absoluteY="349dp" />

    <Button
        android:id="@+id/text_view_reroll"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:text="ReRoll"
        android:background="@drawable/knowledge_drawable"
        tools:layout_editor_absoluteX="315dp"
        tools:layout_editor_absoluteY="349dp" />


</androidx.constraintlayout.widget.ConstraintLayout>